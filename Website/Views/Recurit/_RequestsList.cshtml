@model List<Requirement.RequestList>
<div class="table-section">
    <div class="row">
        <div class="col-xl-12 table-responsive">
            <table id="example" class="table table-bordered text-nowrap key-buttons table-responsive-sm">
                <thead>
                    <tr>
                        <th>SNo.</th>
                        @if (ViewBag.Approved == 0)
                        {
            <th>Action</th>
}
                        <th>Application Offered</th>
                        <th>Request No.</th>
                        <th>Request Date</th>
                        <th>Hired Type</th>
                        <th>Dealer Name</th>
                        <th>Region</th>
                        <th>State</th>
                        <th>Branch</th>

                    </tr>
                </thead>
                <tbody>
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        count++;
        <tr>
            <td> @count</td>
            @if (ViewBag.Approved == 0)
            {
<td>
    <a title="Edit" onclick="ListHeaderAdd(@item.ReqID);" data-toggle='tooltip'>
        <i class="fa-solid fa-pen-to-square  checkgreen" aria-hidden="true"></i>
    </a>
</td>
}
            <td>@item.ApplicationOffered</td>
            <td class="text-red">
                @if (item.Approved == 1 && ClsApplicationSetting.GetSessionValue("RoleName") == "ASM")
                {
<a title="View" href="@Url.Action("ApprovedApplication", new { src = ClsCommon.Encrypt(ViewBag.MenuID + "*/Recurit/ApprovedApplication*" + item.ReqID) })" data-toggle='tooltip'> @item.RequestNo </a> }
                else
                {
<a title="View" href="@Url.Action("ViewCompleteRequirement", new { src = ClsCommon.Encrypt(ViewBag.MenuID + "*/Recurit/ViewCompleteRequirement*" + item.ReqID) })" data-toggle='tooltip'> @item.RequestNo </a>                }
            </td>
            <td>@item.RequestDate</td>
            <td>@item.HiredBy</td>
            <td>@item.DealerName</td>
            <td>@item.Region</td>
            <td>@item.Region</td>
            <td>@item.Branch</td>

        </tr>}

                </tbody>
            </table>
        </div>

    </div>
</div>