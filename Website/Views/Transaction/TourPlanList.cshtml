@model Tab.Approval
@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}

<div class="table-section">
    @Html.Partial("ListHeader_Partial", "Tour Plan List")



    <div class="card">

        <div class="x_panel">
            <div class="card-body">
                <input type="hidden" id="hdnImportUrl" name="hdnImportUrl" value="@Url.Action("TourPlanImport",new { src = ClsCommon.Encrypt(ViewBag.MenuID+"*"+"/Transaction/TourPlanImport"+"*"+"0") })" />
                @using (Ajax.BeginForm("_TourPlanList", "Transaction",
                   new { src = ClsCommon.Encrypt(ViewBag.MenuID.ToString() + "*/Transaction/_TourPlanList") },
                     new AjaxOptions { HttpMethod = "POST", OnSuccess = "BindTarget", OnBegin = "OnBegin()", OnFailure = "CloseLoadingDialog()" },
               new { @id = "_TourPlanListFrom" })
               )
                {
                    <div class="row">
                        <div class="col-sm-2 form-group" style="display:none">
                            <label class="small">&nbsp;</label>
                            <button type="submit" id="btnSearch" name="Command" value="Add" class="btn btndefault pull-right form-control">
                                <i class="fa fa-search"></i>  Search
                            </button>
                        </div>
                    </div>

                    <div class="tabmargin">
                        @Html.HiddenFor(x => x.Approved)
                        <ul id="tabs" class="nav nav-tabs " role="tablist">
                            <li class="nav-item"> <a tabvalue="0" class="nav-link ripplelink AnchorApproval @(Model.Approved == 0 ? "active" : "")" data-toggle="tab" role="tab">Active</a> </li>
                            <li class="nav-item"> <a tabvalue="1" class="nav-link ripplelink AnchorApproval @(Model.Approved == 1 ? "active" : "") " data-toggle="tab" role="tab">Expiring Today</a></li>
                            <li class="nav-item"> <a tabvalue="2" class="nav-link ripplelink AnchorApproval @(Model.Approved == 2 ? "active" : "") " data-toggle="tab" role="tab">Expired</a></li>

                        </ul>
                    </div>
                }

                <div class="row">
                    <div class="col-lg-12 ">
                        <div id="TargetDiv"></div>
                    </div>
                </div>


            </div>
        </div>
    </div>




    <div class="modal fade pop-dgn" id="ViewModal">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <div class="modal-header blk-gdn-btn">
                    <h4 class="modal-title"><span class="mx-2"><i class="fas fa-print "></i></span>Add Plan </h4>
                    <div class="close" data-dismiss="modal">&times;</div>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div id="AddTagetDiv"></div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade pop-dgn" id="ViewHistoryModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header blk-gdn-btn">
                    <h4 class="modal-title"><i class="fas fa-print"></i></h4>
                    <div class="close" data-dismiss="modal">&times;</div>
                </div>
                <div class="modal-body">
                    <div id="TagetHistoryDiv"></div>
                </div>
            </div>
        </div>

    </div>
    </div>

