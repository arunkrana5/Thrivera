        <script>

        function ShowHistory(obj) {
            var ID = $(obj).closest("tr").find("input:hidden[name=I]").val();
            $.ajax({
                url: "/Transaction/_TourPlanHistory",
                type: "Get",
                data: { src: EncryptJSON(@ViewBag.MenuID+"*" + "/Transaction/_TourPlanHistory*" + ID) },
                success: function (data) {
                    $("#TagetHistoryDiv").empty();
                    $("#TagetHistoryDiv").html(data);
                    $('#ViewHistoryModal').modal({
                        backdrop: 'static',
                        keyboard: false
                    })
                },
                error: function (er) {
                    alert(er);
                }
            });
        }

        function OnBegin() {
            $("#TargetDiv").empty();
            $("#TargetDiv").html('<img src="/assets/design/images/loader.gif" class="imgloader" />');
        }

        $(document).ready(function () {
            $("#btnSearch").click();

        });
        function BindTarget(args) {

            $("#TargetDiv").empty();
            $("#TargetDiv").html(args);
            DatatableScripts();

        }


        $('.AnchorApproval').on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            var att = $(this).attr("tabvalue");
            $(".AnchorApproval.active").removeClass("active");
            $(this).addClass("active");
            $("#Approved").val(att);
            $("#btnSearch").click();
        });


